---
export interface Props {
  name: string;
  label?: string;
  value?: string;
  min?: string;
  max?: string;
  required?: boolean;
  class?: string;
}

const { 
  name,
  label,
  value,
  min,
  max,
  required = false,
  class: className = '',
  ...props 
} = Astro.props;

const inputClasses = [
  'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-primary',
  className
].filter(Boolean).join(' ');
---

<div class="space-y-1">
  {label && (
    <label for={name} class="block text-sm font-medium text-gray-700">
      {label}
      {required && <span class="text-danger ml-1">*</span>}
    </label>
  )}
  <input
    type="date"
    id={name}
    name={name}
    value={value}
    min={min}
    max={max}
    required={required}
    class={inputClasses}
    {...props}
  />
</div>