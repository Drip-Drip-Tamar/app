---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import Button from '../../components/Button.astro';
import Alert from '../../components/Alert.astro';
import { sql } from '../../utils/db';

// Get recent samples and stats
let recentSamples = [];
let totalSamples = 0;
let sites = [];

try {
  // Get sites
  sites = await sql`
    SELECT id, slug, name 
    FROM sites 
    ORDER BY name
  `;

  // Get recent samples
  const recentData = await sql`
    SELECT 
      s.sampled_at,
      st.name as site_name,
      st.slug as site_slug,
      r1.value as e_coli,
      r2.value as enterococci
    FROM samples s
    JOIN sites st ON s.site_id = st.id
    LEFT JOIN results r1 ON s.id = r1.sample_id AND r1.param = 'e_coli'
    LEFT JOIN results r2 ON s.id = r2.sample_id AND r2.param = 'intestinal_enterococci'
    ORDER BY s.sampled_at DESC
    LIMIT 5
  `;

  recentSamples = recentData.map(sample => ({
    ...sample,
    sampled_at: new Date(sample.sampled_at).toLocaleDateString()
  }));

  // Get total sample count
  const totalResult = await sql`
    SELECT COUNT(*) as count FROM samples
  `;
  totalSamples = totalResult && totalResult[0] ? parseInt(totalResult[0].count) : 0;

} catch (error) {
  console.error('Error loading admin data:', error);
}

// Check for success message from URL params
const url = new URL(Astro.request.url);
const successMessage = url.searchParams.get('success');

function getResultClass(value: number): string {
  if (value < 100) return 'result-safe';
  if (value < 1000) return 'result-moderate';
  return 'result-high';
}
---

<Layout title="Admin Dashboard - Drip Drip Tamar">
  <main class="max-w-6xl mx-auto px-4 py-8">
    <!-- Page Header -->
    <header class="mb-8">
