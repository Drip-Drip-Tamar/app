          <Button href="/admin/cms/" variant="secondary" class="w-full">
            Content Manager
          </Button>
        </div>
      </Card>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Recent Activity -->
      <Card>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          Recent Samples
        </h2>
        
        {recentSamples.length > 0 ? (
          <div class="space-y-4">
            {recentSamples.map(sample => (
              <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
                <div>
                  <div class="font-medium text-gray-900">
                    {sample.site_name}
                  </div>
                  <div class="text-sm text-gray-500">
                    {sample.sampled_at}
                  </div>
                </div>
                <div class="flex gap-3 text-sm">
                  <span class={`${getResultClass(sample.e_coli || 0)} px-2 py-1 rounded`}>
                    E. coli: {sample.e_coli || 'N/A'}
                  </span>
                  <span class={`${getResultClass(sample.enterococci || 0)} px-2 py-1 rounded`}>
                    Entero: {sample.enterococci || 'N/A'}
                  </span>
                </div>
              </div>
            ))}
            
            <div class="pt-4">
              <Button href="/admin/samples" variant="secondary" size="sm">
                View All Samples
              </Button>
            </div>
          </div>
        ) : (
          <div class="text-center text-gray-500 py-8">
            <div class="text-2xl mb-2">üìä</div>
            <p>No samples logged yet</p>
            <Button href="/admin/log-sample" class="mt-4">
              Log First Sample
            </Button>
          </div>
        )}
      </Card>

      <!-- Site Overview -->
      <Card>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          Monitoring Sites
        </h2>
        
        <div class="space-y-3">
          {sites.map(site => (
            <div class="flex items-center justify-between py-2">
              <div>
                <div class="font-medium text-gray-900">{site.name}</div>
                <div class="text-sm text-gray-500">/{site.slug}</div>
              </div>
              <div class="flex gap-2">
                <Button 
                  href={`/results/${site.slug}`}
                  variant="secondary"
                  size="sm"
                >
                  View Data
                </Button>
              </div>
            </div>
          ))}
        </div>

        <!-- Summary Stats -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="grid grid-cols-2 gap-4 text-center">
            <div>
              <div class="text-2xl font-bold text-primary">{totalSamples}</div>
              <div class="text-sm text-gray-600">Total Samples</div>
            </div>
            <div>
              <div class="text-2xl font-bold text-primary">{sites.length}</div>
              <div class="text-sm text-gray-600">Active Sites</div>
            </div>
          </div>
        </div>
      </Card>
    </div>

    <!-- Help Section -->
    <Card class="mt-8">
